<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherti_view_credit_sale_order" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//form/sheet" position="before"> 
                <div class="alert alert-danger" role="alert" style="margin-bottom:0px;" attrs="{'invisible': [('has_credit', '!=', True)]}"> This contact has a current credit
                </div>
            </xpath>

            <xpath expr="//field[(@name='partner_id')]" position="after"> 
                <field name="has_credit" invisible="1"/>
            </xpath>

        </field>
    </record>
</odoo>